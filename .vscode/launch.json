    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "debug list.ts",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\debug\\list.js",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            "env": { "transactionTableName": "Transactions"}
        },
        {
            "type": "node",
            "request": "launch",
            "name": "debug category.ts",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\debug\\category.js",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            "env": { 
                "transactionTableName": "Transactions",
                "categoriesMappingTableName": "TransactionsCategoryMapping"
            }
        }
    ]
}